// Configurações do Prisma (Padrão)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo do Usuário
// Modelo do Usuário
model User {
  id        String   @id @default(uuid())
  name      String?  // <--- ADICIONAMOS ESSA LINHA (O '?' torna opcional)
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  avatarUrl String?
   
  slug      String   @unique
   
  // Relacionamento: Um usuário tem vários links
  links     Link[]

  @@map("users")
}

// Modelo do Link
model Link {
  id        String   @id @default(uuid())
  title     String
  url       String
  createdAt DateTime @default(now())

  // Conexão com o Usuário (Chave Estrangeira)
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@map("links")
}